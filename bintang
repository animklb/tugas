import javax.swing.*;
public class NewMain {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        int x=0;
        x=Integer.parseInt(JOptionPane.showInputDialog("Berapakah jumlah $ yang di inginkan : "));
        for(int i=1;i<=x;i++){
            for (int j=1;j<=i;j++){
                System.out.print("$");
            }
            System.out.println();
        }
            }
        }
   
    

